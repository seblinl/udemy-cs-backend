<%- include("../partials/top") %>
    <h1>Cinema <%= cinema.name %>
    </h1>
    <ul>
        <li>
            Location: <%= cinema.location %>
        </li>
        <li>
            Website:
            <a href="#">
                <%= cinema.website %>
            </a>
        </li>
    </ul>

    <h2>Showing</h2>
    <ul>
        <% for (let film of cinema.films) { %>
            <li><a href="/films/<%= film._id %>">
                    <%= film.title %>
                </a>
            </li>
            <% } %>
    </ul>

    <a href="/cinemas">&lt; Back</a>
    <a href="/cinemas/<%= cinema._id %>/films/new">Add a New Film</a>
    <form action="/cinemas/<%= cinema._id %>?_method=DELETE" method="post">
        <button type="submit">Delete</button>
    </form>

    <%- include("../partials/bottom") %>